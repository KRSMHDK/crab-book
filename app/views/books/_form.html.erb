<%= form_with model: @book, multipart: true do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :author_id, class: 'form-label' %>
    <%= form.collection_select :author_id, @author, :id, :name, { prompt: 'Select an Author' }, { class: 'form-control' } %>
  </div>
  <div class="mb-3">
    <%= form.label :genre, class: 'form-label' %>
    <%= form.text_field :genre, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :page_count, class: 'form-label' %>
    <%= form.number_field :page_count, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :language, class: 'form-label' %>
    <%= form.text_field :language, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :rating, class: 'form-label' %>
    <%= form.text_field :rating, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :image %>
    <%= form.file_field :image, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_area :description, size: "60x10", class: 'form-control' %>
  </div>
  <div class="d-grid gap-2">
    <%= form.submit "Submit", class:"btn btn-primary"  %>
  </div>
<% end %>
