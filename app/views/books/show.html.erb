<main id="main" data-aos="fade" data-aos-delay="1500">
  <section id="about" class="about hero">
    <div class="container">
      <div class="row gy-4 justify-content-center">
        <div class="col-lg-4">
          <% if @book.image.attached? %>
            <%= image_tag url_for(@book.image), class: 'img-thumbnail' %>
          <% else %>
            <%= image_tag "https://upload.wikimedia.org/wikipedia/commons/6/65/No-Image-Placeholder.svg", class: 'img-thumbnail' %>
          <% end %>
        </div>
        <div class="col-lg-5 content">
          <h2><%= @book.title %></h2>
          <h3><%= link_to @book.author_name, author_path(@book.author) %></h3>
          <h3><%= @book.publication_date %></h3>
          <p class="fst-italic py-3">
            <%= @book.description %>
          </p>
          <div class="row">
            <div class="col-lg-6">
              <ul>
                <li><i class="bi bi-chevron-right"></i> <strong>Title:</strong> <span><%= @book.title %></span></li>
                <li><i class="bi bi-chevron-right"></i> <strong>Genre:</strong> <span><%= @book.genre %></span></li>
                <li><i class="bi bi-chevron-right"></i> <strong>Page Count:</strong> <span><%= @book.page_count %></span></li>
                <li><i class="bi bi-chevron-right"></i> <strong>Language:</strong> <span><%= @book.language %></span></li>
              </ul>
            </div>
            <div class="col-lg-6">
              <ul>
                <li><i class="bi bi-chevron-right"></i> <strong>Rating:</strong> <span><%= @book.rating %></span></li>
                <li><i class="bi bi-chevron-right"></i> <strong>Language:</strong> <span><%= @book.language %></span></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
</html>
